rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Wishes collection - allows anyone to read and create wishes
    match /wishes/{wishId} {
      // Allow anyone to read wishes (so all visitors can see them)
      allow read: if true;
      
      // Allow anyone to create wishes (with validation)
      allow create: if request.resource.data.keys().hasAll(['name', 'message', 'date'])
                    && request.resource.data.name is string
                    && request.resource.data.message is string
                    && request.resource.data.date is string
                    && request.resource.data.name.size() <= 100
                    && request.resource.data.message.size() <= 1000;
      
      // Prevent updates and deletes (wishes are permanent once created)
      allow update: if false;
      allow delete: if false;
    }
  }
}

